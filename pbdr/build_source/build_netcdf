./configure \
  --prefix=/home/pbdr/work-my/local/netcdf/ \
  --enable-netcdf4 \
  --enable-shared \
  --disable-doxygen \
  CC="mpicc -g" \
  CFLAGS="-fPIC -I/home/pbdr/work-my/local/ompi/include -I/home/pbdr/work-my/local/hdf5/include" \
